<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.borombo.flaborfit.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2ca5f5"
        android:layout_marginBottom="5dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/weight"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />

        <TextView
            android:text="30%"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="Weight Lifting"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/textView2"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="Do you even lift ?"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:layout_alignParentEnd="false"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="10 sets"
            android:textSize="20sp"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView4"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916bcd"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/lotus"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/lotus" />

        <TextView
            android:text="15%"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="Yoga"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/textView2"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="Namaste"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:layout_alignParentEnd="false"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="1 hour"
            android:textSize="20sp"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView4"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52ad56"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <TextView
            android:text="22%"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="Cardio"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/textView2"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="Run like crazy"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:paddingBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView3"
            android:layout_alignParentEnd="false"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="5 miles"
            android:textSize="20sp"
            android:gravity="right"
            android:padding="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#20000000"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView4"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heart"
            android:id="@+id/heart"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</LinearLayout>
