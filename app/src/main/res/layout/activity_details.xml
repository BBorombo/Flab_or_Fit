<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#2ca5f5"
    android:id="@+id/main_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.borombo.flaborfit.DetailsActivity">

    <TextView
        android:text="Weight Lifting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exercicetitle"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/weight"
        android:id="@+id/exerciceImage" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#20000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Mark It Complete !"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:text="Complete Set 1"
            android:textSize="18sp"
            android:buttonTint="#FFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/checkBox1"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:text="Complete Set 1"
            android:textSize="18sp"
            android:buttonTint="#FFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/checkBox2"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:text="Complete Set 1"
            android:textSize="18sp"
            android:buttonTint="#FFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/checkBox3"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:text="Complete Set 1"
            android:textSize="18sp"
            android:buttonTint="#FFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/checkBox4"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:text="Complete Set 1"
            android:textSize="18sp"
            android:buttonTint="#FFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/checkBox5"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
